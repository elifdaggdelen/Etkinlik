@model IQueryable<Data.Activity>
@{
    ViewBag.Title = "Anasayfa";
}
@foreach (var etkinlik in Model)
{
    <div class="row">
        <h2>@etkinlik.Title</h2>
        <hr />
        <div style="text-align:center">
            <img src="@Url.Action("Resim",new{@id = etkinlik.Id})" width="600" height="400" />
        </div>
        <hr />
        <div>
            @Html.Raw(etkinlik.Text)
        </div>
        <div class="well posts-detail">
            @Html.ActionLink("Devamını oku", "Show", "Etkinlik", new { id =  etkinlik.Id }, null) |
            @Html.ActionLink(etkinlik.Kategori.KategoriAdi, "Index", "Etkinlik", new { id = etkinlik.Kategori.Id }, null) 
            
            <span class="glyphicon glyphicon-time"></span> @etkinlik.Date.ToString()
        </div>
    </div>
}
<hr />
<div class="row pull-right">
    @Html.ActionLink("Sonraki sayfa", "Index",
    new { start = ViewBag.start, pageSize = ViewBag.pageSize })
</div>
